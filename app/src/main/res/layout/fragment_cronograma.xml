<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cronograma">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingTop="70dp"
        android:text="Buscar agendamiento por fecha"
        android:textSize="20sp"
        android:translationY="80dp" />

    <ImageView
        android:id="@+id/btnCalen"
        android:onClick="verCalendario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/calendariordm"
        android:translationX="160dp"
        android:translationY="200dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerViewSer"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:translationY="380dp" />

    <TextView
        android:id="@+id/txtFechaSel"
        android:layout_width="147dp"
        android:layout_height="31dp"
        android:translationX="120dp"
        android:translationY="110dp" />

</FrameLayout>