<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/celeste"
    tools:context=".InicioActivity">

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="715dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="42dp"
            android:layout_height="50dp"
            android:translationX="40dp"
            android:translationY="30dp"
            app:srcCompat="@drawable/logosenanegro" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:text="Desarollado por Darien Pesca, Johana Sutaneme y Diego García"
            android:textColor="@color/gray"
            android:textSize="11dp"
            android:translationX="40dp"
            android:translationY="585dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© Copyright 2023 Soft Air | Falcon Tech. Todos los derechos reservados"
            android:textColor="@color/gray"
            android:textSize="11dp"
            android:translationX="20dp"
            android:translationY="595dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="273dp"
            android:layout_height="254dp"
            android:translationX="60dp"
            android:translationY="100dp"
            app:srcCompat="@drawable/logoappnuevo" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>