<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/celeste"
    tools:context=".IniSesRegActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="82dp"
        android:text="© Copyright 2023 Soft Air. Todos los derechos reservados"
        android:textColor="@color/gray"
        android:translationY="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="42dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:translationX="10dp"
        android:translationY="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logosenanegro" />

    <Button
        android:id="@+id/btnTec"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="81dp"
        android:onClick="llamarTec"
        android:text="Técnico"
        android:translationX="-61dp"
        android:translationY="30dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnCli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:text="¿Aún no te has registrado?"
        android:translationX="-12dp"
        android:translationY="50dp"
        app:layout_constraintEnd_toEndOf="@+id/btnTec"
        app:layout_constraintTop_toBottomOf="@+id/btnTec" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="132dp"
        android:layout_height="29dp"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="39dp"
        android:text="Registrarme como:"
        android:textStyle="bold"
        android:translationX="-45dp"
        android:translationY="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <Button
        android:id="@+id/btnCli"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="281dp"
        android:onClick="llamarCli"
        android:text="Cliente"
        android:translationX="100dp"
        android:translationY="-45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnTec" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="148dp"
        android:layout_height="168dp"
        android:layout_marginTop="143dp"
        android:layout_marginBottom="145dp"
        android:translationY="-10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnTec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/engranaje" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="13dp"
        android:onClick="llamarRegTecIni"
        android:text="Técnico"
        android:textColor="@color/blue"
        android:translationX="80dp"
        android:translationY="18dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="54dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        android:onClick="llamarRegCliIni"
        android:text="Cliente"
        android:textColor="@color/blue"
        android:translationX="85dp"
        android:translationY="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="54dp"
        android:text="Seleccione un rol para acceder"
        android:translationX="55dp"
        android:translationY="-30dp"
        app:layout_constraintBottom_toTopOf="@+id/btnTec"
        app:layout_constraintStart_toStartOf="@+id/btnCli" />

</androidx.constraintlayout.widget.ConstraintLayout>